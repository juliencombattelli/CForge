{
    "version": 1,
    "base_profiles": [
        {
            "name": "gnu_common",
            "warnings": [
                "-Wall",
                "-Wextra",
                "-Wshadow",
                "$<$<COMPILE_LANGUAGE:CXX>:-Wnon-virtual-dtor>",
                "$<$<COMPILE_LANGUAGE:CXX>:-Wold-style-cast>",
                "-Wcast-align",
                "-Wunused",
                "$<$<COMPILE_LANGUAGE:CXX>:-Woverloaded-virtual>",
                "-Wpedantic",
                "-Wconversion",
                "-Wsign-conversion",
                "-Wnull-dereference",
                "-Wdouble-promotion",
                "-Wformat=2"
            ]
        },
        {
            "name": "gcc_extra",
            "warnings": [
                "-Wmisleading-indentation",
                "-Wduplicated-cond",
                "-Wduplicated-branches",
                "-Wlogical-op",
                "-Wuseless-cast"
            ]
        }
    ],
    "profiles": [
        {
            "compiler_id": "Clang",
            "inherit": "gnu_common",
            "warnings": []
        },
        {
            "compiler_id": "GCC",
